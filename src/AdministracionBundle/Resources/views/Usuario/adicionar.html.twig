{% extends '::adminTemplate.html.twig' %}

{% block mainMenu %}
    {% include 'AdministracionBundle:Templates:mainMenu.html.twig' with {'page':'usuarios','subpage':'adicionar-usuario'} %}
{% endblock %}

{% block breadcrumbs %}
    {% include 'AdministracionBundle:Templates:breadcrumbs.html.twig' with {'items':[
    {'raiz':false,'title':'Usuarios','href':'#'},
    {'raiz':true,'title':'Adicionar Usuario'}
    ]} %}
{% endblock %}

{% block titulo %}Adicionar Usuario{% endblock %}
{% block subTitulo %}Adicionar usuarios a la Plataforma{% endblock %}
{% block generalContent %}
    <div class="content animate-panel">
        <div class="row">
            <div class="col-lg-12">
                <div class="hpanel">
                    {#<div class="panel-heading">
                            <div class="panel-tools">
                                    <a class="showhide"><i class="fa fa-chevron-up"></i></a>
                                    <a class="closebox"><i class="fa fa-times"></i></a>
                            </div>

                    </div>#}
                    <div class="panel-body">
                        <form role="form" id="formAdicionarUsuario" action="{{ path('administracion_usuario_adicionar') }}" method="post">
                            <div class="row m-b-lg">
                                <div class="col-lg-12">
                                    <input type="button"  id="nuevoUsuarioAdicionar" value="Guardar" class="buttonDataTable addcarac" style="padding: 4px;"  />
                                    <input type="button"  id="nuevoUsuarioCancelar" value="Cancelar" class="buttonDataTable addcarac" style="padding: 4px;" />
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-md-3">
                                    <div class="form-group">
                                        <label for="fechaRegistroAdicionarUsuario">Fecha Registro<span class="required">*</span></label>
                                        <div class="input-group">
                                            <div  class="input-group-addon"><i class="fa fa-calendar"></i></div>
                                            <input type="text" disabled class="form-control" name="fechaRegistroAdicionarUsuario" id="fechaRegistroAdicionarUsuario" value="{{ "now"|date("d/m/Y") }}" placeholder="Fecha Registro">
                                            {#<input type="date" name="fechaRegistroAdicionarUsuario" id="fechaRegistroAdicionarUsuario" value="" class="form-control">#}
                                        </div>
                                    </div>
                                </div>
                                <div class="col-md-3">
                                    <div class="form-group">
                                        <label for="rolAdicionarUsuario">Rol <span class="required">*</span></label>
                                        <select required="required" name="rolAdicionarUsuario" id="rolAdicionarUsuario" class="form-control required">
                                            <option value="">Seleccionar Rol</option>
                                            {% for rol in roles %}
                                                <option value="{{ rol.id }}">{{ rol.nombre }}</option>
                                            {% endfor %}
                                        </select>

                                    </div>

                                </div>
                                <div class="col-md-3">
                                    <div class="form-group">
                                        <label for="emailAdicionarUsuario">Email <span class="required">*</span></label>
                                        <input required="required" class="form-control" type="text" name="emailAdicionarUsuario" id="emailAdicionarUsuario">
                                    </div>
                                </div>
                                <div class="col-md-3">
                                    <div class="form-group">
                                        <label for="passwordAdicionarUsuario">Contraseña<span class="required">*</span></label>
                                        <input required="required" type="text" name="passwordAdicionarUsuario" id="passwordAdicionarUsuario" value="" class="form-control">
                                    </div>
                                </div>
                            </div>
                            <input type="hidden" name="idUsuarioEditar" id="idUsuarioEditar" value="">
                            <input type="hidden" name="adicionarUsuario" id="adicionarUsuario" value="true">
                        </form>

                    </div>
                </div>


            </div>

        </div>
    </div>
    <a id="modal"  class="" style="visibility: hidden" href="#modalEditarUsuario"  data-toggle="modal" ><i class="fa fa-edit"></i> Editar álbum</a>
    <a id="modalAdicionar"  style="visibility: hidden"  class="" href="#modalAdicionarUsuario"  data-toggle="modal" ><i class="fa fa-edit"></i>DDDDD</a>
    <a id="modalEliminar"  style="visibility: hidden"  class="" href="#modalEliminarUsuario"  data-toggle="modal" ><i class="fa fa-edit"></i>DDDDD</a>
    {% include 'AdministracionBundle:Usuario:modalEditar.html.twig'%}
    {% include 'AdministracionBundle:Usuario:modalAdicionar.html.twig' with {'roles':roles}%}
    {% include 'AdministracionBundle:Usuario:modalEliminar.html.twig'%}

    <input type="hidden" value="{{ path('administracion_usuario_listar') }}" id="urlListar">
    <input type="hidden" value="{{ path('administracion_usuario_editar') }}" id="urlEditar">


{% endblock  %}

