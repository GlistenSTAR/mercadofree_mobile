<div class="modal fade" id="modalAdicionarUsuario" tabindex="-1" role="dialog" aria-labelledby="loginLabel" aria-hidden="true">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal"><span aria-hidden="true">×</span><span class="sr-only">Close</span></button>
                <h4 class="modal-title" id="loginLabel"><i class="fa fa-plus-circle"></i> Adicionar Usuario</h4>
            </div>
            <div class="modal-body">
                <form role="form" id="formAdicionarUsuario" action="{{ path('administracion_usuario_adicionar') }}" method="post">
                    <div class="row">
                        <div class="col-md-6">
                            <div class="form-group">
                                <label for="emailAdicionarUsuario">Email <span class="required">*</span></label>
                                <input required="required" class="form-control" type="text" name="emailAdicionarUsuario" id="emailAdicionarUsuario">
                            </div>

                            <div class="form-group">
                                <label for="rolAdicionarUsuario">Rol <span class="required">*</span></label>
                                <select required="required" name="rolAdicionarUsuario" id="rolAdicionarUsuario" class="form-control ">
                                    <option value="0">Seleccionar Rol</option>
                                    {% for rol in roles %}
                                    <option value="{{ rol.id }}">{{ rol.nombre }}</option>
                                    {% endfor %}
                                </select>

                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-group">
                                <label for="fechaRegistroAdicionarUsuario">Fecha Registro<span class="required">*</span></label>
                                <div class="input-group">
                                    <div  class="input-group-addon"><i class="fa fa-calendar"></i></div>
                                    <input type="text" disabled class="form-control" name="fechaRegistroAdicionarUsuario" id="fechaRegistroAdicionarUsuario" value="{{ "now"|date("d/m/Y") }}" placeholder="Fecha Registro">
                                    {#<input type="date" name="fechaRegistroAdicionarUsuario" id="fechaRegistroAdicionarUsuario" value="" class="form-control">#}
                                </div>
                            </div>
                            <div class="form-group">
                                <label for="passwordAdicionarUsuario">Contraseña<span class="required">*</span></label>
                                <input type="text" name="passwordAdicionarUsuario" id="passwordAdicionarUsuario" value="" class="form-control">
                            </div>
                        </div>
                    </div>
                    <input type="hidden" name="idUsuarioEditar" id="idUsuarioEditar" value="">
                    <input type="hidden" name="adicionarUsuario" id="adicionarUsuario" value="true">
                </form>
            </div>
            <div class="modal-footer">
                <a id="btnSubmitUsuarioAdicionar" class="btn btn-rw btn-primary">Aceptar <img id="submitEditLoading" style="display: none;" class="img-responsive" src=""></a>
                <a class="btn btn-default" data-dismiss="modal">Cancelar</a>

            </div>
        </div><!-- /modal content -->
    </div><!-- /modal dialog -->
</div><!-- /modal holder -->
