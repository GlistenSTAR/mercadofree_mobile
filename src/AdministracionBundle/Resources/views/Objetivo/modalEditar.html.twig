<div class="modal fade" id="modalEditarObjetivo" tabindex="-1" role="dialog" aria-labelledby="loginLabel" aria-hidden="true">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal"><span aria-hidden="true">×</span><span class="sr-only">Close</span></button>
                <h4 class="modal-title" id="loginLabel"><i class="fa fa-edit"></i> Editar Objetivo</h4>
            </div>
            <div class="modal-body">
                <form role="form" id="formEditarObjetivo" action="{{ path('administracion_objetivo_editar') }}" method="post">
                    <div class="row">
                        <div class="col-md-6">
                            <div class="form-group">
                                <label for="nombreObjetivo">Nombre <span class="required">*</span></label>
                                <input required="required" class="form-control" type="text" name="nombreObjetivo" id="nombreObjetivo">
                            </div>

                            <div class="form-group">
                                <label for="puntosObjetivo">Puntos <span class="required">*</span></label>
                                <input required="required" class="form-control" type="number" name="puntosObjetivo" id="puntosObjetivo">
                            </div>

                            <div class="form-group">
                                <label for="visibleObjetivo">Visible <span class="required">*</span></label>
                                <select required="required" name="visibleObjetivo" id="visibleObjetivo" class="form-control ">
                                    <option value="">Seleccionar Visibilidad</option>
                                </select>

                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-group">
                                <label for="iconoObjetivo">Icono <span class="required">*</span> <i id="iconoContainerObjetivoEditar" style="font-size: 16px;margin-left: 5px;"></i></label>
                                <input type="text" name="iconoObjetivo" id="iconoObjetivo" value="" class="form-control">
                            </div>


                            <div class="form-group">
                                <label for="categoriaObjetivo"><span class="required">Categoría*</span></label>
                                <input disabled type="text" name="categoriaObjetivo" id="categoriaObjetivo" value="" class="form-control">
                            </div>
                        </div>
                        <div class="col-md-12">
                            <div class="form-group">
                                <label for="descripcionObjetivo">Descripción <span class="required">*</span> <i id="iconoContainerDescripcionEditar" style="font-size: 16px;margin-left: 5px;"></i></label>
                                {#<input type="text" name="descripcionObjetivo" id="descripcionObjetivo" value="" class="form-control">#}
                                <textarea name="descripcionObjetivo" id="descripcionObjetivo" value="" class="form-control"></textarea>
                            </div>
                        </div>
                    </div>
                    <input type="hidden" name="idObjetivoEditar" id="idObjetivoEditar" value="">
                    <input type="hidden" name="editarObjetivo" id="editarObjetivo" value="true">
                </form>
            </div>
            <div class="modal-footer">
                <a id="btnSubmitObjetivoEditar" class="btn btn-rw btn-primary">Aceptar <img id="submitEditLoading" style="display: none;" class="img-responsive" src=""></a>
                <a class="btn btn-default" data-dismiss="modal">Cancelar</a>

            </div>
        </div><!-- /modal content -->
    </div><!-- /modal dialog -->
</div><!-- /modal holder -->