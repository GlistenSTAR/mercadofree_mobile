{% extends '::adminTemplate.html.twig' %}

{% block mainMenu %}
    {% include 'AdministracionBundle:Templates:mainMenu.html.twig' with {'page':'ofertas'} %}
{% endblock %}

{% block breadcrumbs %}
    {% include 'AdministracionBundle:Templates:breadcrumbs.html.twig' with {'items':[
    {'raiz':false,'title':'Oferta','href':'#'},
    {'raiz':true,'title':'Detalles de la Tienda'}
    ]} %}
{% endblock %}

{% block titulo %}<i class="fa fa-bolt"></i> Detalles de la Oferta{% endblock %}
{% block subTitulo %}Detalles de la oferta seleccionada.{% endblock %}
{% block generalContent %}
    <div class="content animate-panel">
        <div class="row">
            <div class="col-lg-12">
                <div class="hpanel">
                    {#<div class="panel-heading">
                            <div class="panel-tools">
                                    <a class="showhide"><i class="fa fa-chevron-up"></i></a>
                                    <a class="closebox"><i class="fa fa-times"></i></a>
                            </div>

                    </div>#}
                    <div class="panel-body">
                        <input type="button" id="volverOferta" value="Volver Atras" class="buttonDataTable"  style="padding: 5px; margin-bottom: 10px;"/>
                        <div class="row" >
                            <div class="col-lg-4">
                                <div class="form-group">
                                    <label for="nombreOfertaDetalles">Nombre<span class="required">*</span></label>
                                    <input required="required" disabled class="form-control" type="text" name="nombreOfertaDetalles" id="nombreOfertaDetalles" value="{{ oferta.nombre }}">
                                </div>
                                <div class="form-group">
                                    <label for="fechaFinOfertaDetalles">Fecha Fin<span class="required">*</span></label>
                                    <input required="required" disabled class="form-control" type="text" name="fechaFinOfertaDetalles" id="fechaFinOfertaDetalles" value="{{ oferta.fechafin|date('d/m/Y') }}">
                                </div>
                            </div>
                            <div class="col-lg-4">
                                <div class="form-group">
                                    <label for="descuentoOfertaDetalles">Descuento<span class="required">*</span></label>
                                    <input required="required" disabled class="form-control" type="text" name="descuentoOfertaDetalles" id="descuentoOfertaDetalles" value="{{ oferta.porcientodescuento }}">
                                </div>
                                <div class="form-group">
                                    <label for="estadoOfertaDetalles">Estado <span class="required">*</span></label>
                                    <input required="required" disabled class="form-control" type="text" name="estadoOfertaDetalles" id="estadoOfertaDetalles" value="{{oferta.estadoProductoid!=null?oferta.estadoProductoid.nombre:""}}">

                                </div>
                            </div>
                            <div class="col-lg-4">
                                <div class="form-group">
                                    <label for="fechaInicioOfertaDetalles">Fecha Inicio<span class="required">*</span></label>
                                    <input required="required" disabled class="form-control" type="text" name="fechaInicioOfertaDetalles" id="fechaInicioOfertaDetalles" value="{{ oferta.fechainicio|date('d/m/Y') }}">
                                </div>

                            </div>
                        </div>
                        <div class="row">
                            <div class="col-lg-12">

                                <table id="tableDetalles" class="display table table-bordered">
                                    <thead>
                                    <tr>
                                        <th style="width:50px;">Imagen</th>
                                        <th style="width:150px;">Nombre</th>
                                        <th style="width:50px;">Precio</th>
                                        <th style="width:50px;">Cantidad</th>
                                        <th style="width:80px;">Categoria</th>
                                    </tr>
                                    </thead>
                                    <tfoot>

                                    </tfoot>
                                </table>
                            </div>
                        </div>


                    </div>


                    </div>
                </div>


            </div>

        </div>
    </div>

    <input type="hidden" value="{{ path('administracion_oferta_listar') }}" id="urlListar">
    <input type="hidden" value="{{ path('administracion_oferta_detalles') }}" id="urlDetalles">
    <input type="hidden" value="{{ path('administracion_oferta_producto_detalles') }}" id="urlProductos">
    <input type="hidden" value="{{oferta.id}}" id="idOferta">
    <input type="hidden" value="{{ asset(uploads_images_productos) }}" id="urlImagen">





{% endblock  %}

