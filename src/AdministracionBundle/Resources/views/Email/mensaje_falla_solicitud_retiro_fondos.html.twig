{% extends '::emails.html.twig' %}

{%  block body %}
    <tr>
        <td valign="top">
            <h2 class="h2" style="color:#444444;
			display:block;
			font-family:Open Sans;
			font-size:30px;
			font-weight: 400;
			line-height:100%;
			margin-top:2%;
			margin-right:0;
			margin-bottom:1%;
			margin-left:0;
			text-align:left;">Falla en intento de Retiro de Fondos</h2>
            <br />
            <div class="textdark" style="color: #444444;
			font-family: Open Sans;
			font-size: 17px;
			line-height: 150%;
			text-align: left;">
                La siguiente solicitud de Retiro de Fondos ha sido tenido un fallo:<br/><br/>
                {% if solicitudRetiro.mensajeErrorPasarela %}
                    Mensaje de error provisto por Paypal: {{ solicitudRetiro.mensajeErrorPasarela }}<br/><br/>
                {% endif %}
                Usuario: {{ usuario.cliente }}<br/>
                Cuenta Payoneer: {{ solicitudRetiro.emailPaypal }}<br/>
                Fecha: {{ solicitudRetiro.fecha | date("d/m/Y H:i") }}<br/>
                Monto: {{ solicitudRetiro.monto | number_format(2, '.', ',') }}<br/>
                Estado de la solicitud: {{ solicitudRetiro.estadoSolicitudRetiro }}<br/><br/>
                
                Datos originales provistos por paypal:
                
                {{ solicitudRetiro.referenciaPasarela }}
            </div>
        </td>
    </tr>

{% endblock %}

