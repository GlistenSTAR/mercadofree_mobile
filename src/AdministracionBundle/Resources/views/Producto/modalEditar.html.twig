<div class="modal fade" id="modalEditarProducto" tabindex="-1" role="dialog" aria-labelledby="loginLabel" aria-hidden="true">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal"><span aria-hidden="true">×</span><span class="sr-only">Close</span></button>
                <h4 class="modal-title" id="loginLabel"><i class="fa fa-edit"></i> Editar Anuncio</h4>
            </div>
            <div class="modal-body">
                <form role="form" id="formEditarProducto" action="{{ path('administracion_anuncio_editar') }}" method="post">
                    <div class="row">
                        <div class="col-md-4" style="text-align: center;">
                            <img id="imgEditarProductoContainer" class="img-responsive">
                            <input hidden id="routeImg" value="">
                        </div>
                            <input type="hidden" name="imgEditarAlbum" id="imgEditarAlbum">


                        <div class="col-md-4">
                            <div class="form-group">
                                <label for="tituloAlbum">Nombre<span class="required">*</span></label>
                                <input disabled required="required" class="form-control" type="text" name="nombreEditar" id="nombreEditar">
                            </div>
                            <div class="form-group">
                                <label for="tituloAlbum">Cuotas/Pagar<span class="required">*</span></label>
                                <input disabled required="required" class="form-control" type="text" name="cuotasEditar" id="cuotasEditar">
                            </div>
                            <div class="form-group">
                                <label for="tituloAlbum">Cantidad<span class="required">*</span></label>
                                <input disabled required="required" class="form-control" type="text" name="cantidadEditar" id="cantidadEditar">
                            </div>
                        </div>
                        <div class="col-md-4">
                            <div class="form-group">
                                <label for="autorAlbum">Precio<span class="required">*</span></label>
                                <input disabled type="text" name="precioEditar" id="precioEditar" value="{{app.user!=null?app.user.email:null }}" class="form-control">
                            </div>
                            <div class="form-group">
                                <label for="autorAlbum">Categoría<span class="required">*</span></label>
                                <input disabled type="text" name="categoriaEditar" id="categoriaEditar" value="{{app.user!=null?app.user.email:null }}" class="form-control">
                            </div>
                            <div class="form-group">
                                <label for="autorAlbum">Usuario<span class="required">*</span></label>
                                <input disabled type="text" name="usuarioEditar" id="usuarioEditar" value="{{app.user!=null?app.user.email:null }}" class="form-control">
                            </div>

                        </div>

                    </div>

                    <div class="row">
                        <div class="col-md-8">
                            <div class="form-group">
                                <label for="autorAlbum">Descripción<span class="required">*</span></label>
                                <textarea disabled id="descripcionEditar" name="descripcionEditar" class="form-control" rows="5" placeholder="Escribe una breve descripción de tu local"></textarea>
                            </div>
                        </div>
                        <div class="col-md-4">
                            <label for="rolEditarUsuario">Estado<span class="required">*</span></label>
                            <select required="required" name="estadoEditar" id="estadoEditar" class="form-control ">
                                <option value="">Seleccionar Estado</option>
                            </select>
                        </div>
                    </div>
                    <input type="hidden" name="idProducto" id="idProducto" value="">
                    <input type="hidden" name="editarProducto" id="idProducto" value="true">
                </form>
            </div>
            <div class="modal-footer">
                <a id="btnSubmitProductoEditar" class="btn btn-rw btn-primary">Aceptar <img id="submitEditLoading" style="display: none;" class="img-responsive" src="spinner.gif"></a>
                <a class="btn btn-default" data-dismiss="modal">Cancelar</a>

            </div>
        </div><!-- /modal content -->
    </div><!-- /modal dialog -->
</div><!-- /modal holder -->
