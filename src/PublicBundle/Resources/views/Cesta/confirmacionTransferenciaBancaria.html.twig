{% extends '::publicTemplate.html.twig' %}

{% block generalContent %}
    <!-- Begin Content -->
    <div class="content-40mg">
        <div class="container">
            <div class="row mb30">
                <div class="col-xs-12 white-bg-shadow" style="min-height: 300px;padding-top:20px;">
                    <div class="row">
                        <div class="col-xs-12">
                            <div class="content-box content-box-bordered success" style="min-height: 260px;">
                                <span class="fa fa-check-circle bordered-icon-lg"></span>
                                <h3 class="pt15">Tu pedido se ha procesado con éxito</h3>
                                <p class="no-margin">
                                    Gracias por tu compra, ahora apúrate a pagar para no perder tu producto.
                                </p>
                                <p class="no-margin">
                                    <label>Monto: </label> ${{ pedido.getTotal()|number_format(2) }}
                                </p>
                                <p class="no-margin">
                                    <label>IBAN: </label> {{ pedido.producto.usuarioid.iban }}
                                </p>
                                <p class="no-margin">
                                    <label>Referencia del Pedido: </label> {{ pedido.codigo }}
                                </p>
                                <p class="help-block">Asegúrate de indicar esta referencia en los detalles de la transferencia. Así el
                                vendedor podrá asociar el pago con tu pedido.</p>
                                <a class="btn btn-primary btn-lg mt30" href="{{ path('public_panel_usuario_compras_detalle',{'codPedido':pedido.codigo}) }}">Ver detalles de la compra</a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

        </div><!-- /container -->
    </div><!-- /content -->
    <!-- End Content -->

{% endblock %}

