{% extends '::publicTemplate.html.twig' %}

{% block generalContent %}
    <!-- Begin Content -->
    <div class="content-40mg">
        <div class="container">
            <div class="row mb30">
                <div class="col-xs-12 white-bg-shadow" style="min-height: 300px;padding-top:20px;">
                    <div class="row">
                        <div class="col-xs-12">
                            <div class="content-box content-box-bordered success" style="min-height: 260px;">
                                <span class="fa fa-check-circle bordered-icon-lg"></span>
                                <h3 class="pt15">Tu factura se ha registrado con éxito</h3>
                                <p class="no-margin">
                                    Gracias por tu compra, ahora apúrate a pagar en {{ pedido.metodoPago.nombre }} para reservar tu compra
                                </p>
                                <p class="no-margin">
                                    <label>Monto: </label> ${{ pedido.getTotal()|number_format(2) }}
                                </p>
                                <p class="no-margin">
                                    <label>Referencia: </label> {{ pedido.factura.ref }}
                                </p>
                                <a class="btn btn-primary btn-lg mt30" href="#">Ver detalles de la compra</a>

                            </div>
                        </div>
                    </div>
                </div>
            </div>

        </div><!-- /container -->
    </div><!-- /content -->
    <!-- End Content -->

{% endblock %}

