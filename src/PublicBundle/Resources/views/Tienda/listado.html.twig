{% extends '::publicTemplate.html.twig' %}

{% block breadcrumbs %}
    <!-- Begin Page Header -->
    <div class="header">
        <div class="container">
            <div class="row">
                <!-- Breadcrumbs -->
                <div class="col-sm-6">
                    <ol class="breadcrumb">
                        <li><span class="ion-home breadcrumb-home"></span><a
                                    href="{{ path('public_homepage') }}">Inicio</a></li>
                        <li>Tiendas</li>
                    </ol>
                </div><!-- /column -->
            </div><!-- /row -->
        </div><!-- /container -->
    </div><!-- /page header -->
{% endblock %}

{% block generalContent %}
    <!-- Begin Content -->
    <div class="content-40mg">
        <div class="container">

            <div class="row mb30">
                <div class="col-xs-12 white-bg-shadow">
                    <div class="row">
                        <div class="col-xs-12">
                            <div class="heading mt30">
                                <h3>Tiendas MercadoFree</h3>
                            </div>
                        </div>
                    </div>
                    <div class="row mt30">
                        {% if tiendas | length > 0 %}
                            {% for t in tiendas %}
                                <div class="col-sm-3 text-center">
                                    <div class="content-box content-box-bordered">
                                        <a href="{{ path('public_tienda_detalle',{'slug': t.slug }) }}">
                                            <img style="margin:0 auto;"
                                                 src="{{ asset(uploads_images_tiendas)~t.getImagenLogo }}"
                                                 class="img-responsive">
                                        </a>
                                    </div>
                                </div>
                            {% endfor %}
                        {% else %}
                            <div class="col-xs-12">
                                <div class="alert alert-success" role="alertdialog"
                                     style="margin-top: 20px;margin-bottom: 10%;">
                                    No existe ninguna tienda disponible.
                                </div>
                            </div>

                        {% endif %}

                    </div>

                </div>
            </div>

        </div><!-- /container -->
    </div><!-- /content -->
    <!-- End Content -->

{% endblock %}

