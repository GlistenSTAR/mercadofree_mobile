       /* jQuery(document).ready(function() {*/

           if ($('#cadenaId').val() != "") {
                var id = $('#cadenaId').val().split('-');

                $('#containerSelect .selectCategorias').each(function () {

                    for (var i = 0; i < id.length; i++) {
