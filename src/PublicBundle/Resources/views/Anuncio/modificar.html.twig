{% extends '::publicTemplate.html.twig' %}

{% block breadcrumbs %}
    <!-- Begin Page Header -->
    <div class="header">
        <div class="container">
            <div class="row">
                <!-- Breadcrumbs -->
                <div class="col-sm-6">
                    <ol class="breadcrumb">
                        <li><span class="ion-home breadcrumb-home"></span><a href="{{ path('public_homepage') }}">Inicio</a></li>
                        <li><a href="{{ path('public_homepage') }}">Panel de Usuario</a></li>
                        <li><a href="{{ path('public_panel_usuario_anuncios') }}">Anuncios</a></li>
                        <li><a href="#">Modificar Anuncio</a></li>
                    </ol>
                </div><!-- /column -->
            </div><!-- /row -->
        </div><!-- /container -->
    </div><!-- /page header -->
{% endblock %}

{% block generalContent %}
    <!-- Begin Content -->
    <div class="content-40mg">
        <div class="container">
            {% include 'PublicBundle:Templates:stepsModificar.html.twig' with {'step':1 ,'idProducto':producto.id} %}

            <div class="row mb30">
                <div class="col-xs-12 white-bg-shadow">
                    <div class="row">
                        <div class="col-xs-12">
                            <div class="heading mt30">
                                <h3>Selecciona la categor√≠a de tu producto</h3>
                            </div>
                        </div>
                    </div>
                    <div class="row" id="containerHilo">
                        <div class="col-lg-12" id="containerHilo">
                            <h4 id="hilo">{{ producto!=null?hilo:"" }}</h4>
                        </div>
                    </div>
                    <div class="row mt30">

                        {% for categoria in categorias %}

                            <div class="col-sm-3 text-center">
                                <div class="content-box content-box-bordered">
                                    <a href="#" id="{{ categoria.id }}" class="categoriaPublicar">
                                        <span class="{{ categoria.icono }} bordered-icon-lg"></span>
                                        <h4 class="pt15">{{ categoria.nombre }}</h4>
                                    </a>
                                </div>
                            </div>
                            {#<div class="clearfix"></div>#}
                            {#{% if loop.index== %}#}

                        {% endfor %}



                        <div class="clearfix"></div>



                    </div>

                    <div class="row" id="containerHilo-bottom">
                        <div class="col-lg-12" id="containerHilo-bottom">
                            <h4 id="hilo-bottom">{{ producto!=null?hilo:"" }}</h4>
                        </div>
                    </div>

                    <div class="row mt30" id="containerSelect">

                        {% if producto!=null %}

                            {{ selects |raw }}

                        {% endif %}


                    </div>

                    <div class="row mb30">
                        <div class="col-sm-12 text-right mt10">
                            {#<a disabled="true" id="nextStep1" href="{{ path('public_anuncio_modificar',{'step':'2', 'nav':'1','idProducto': producto.id}) }}" class="btn btn-rw btn-primary btn-lg">Siguiente <i class="ion-ios7-arrow-right"></i></a>#}
                            <a href="{{ path('public_panel_usuario_anuncios')}}" class="btn btn-rw btn-primary btn-lg"> Cancelar </a>
                            <a id="nextStep1" href="{{ path('public_panel_usuario_anuncios')}}" class="btn btn-rw btn-primary btn-lg"> Aceptar </a>
                        </div>
                    </div>

                </div>
            </div>

        </div><!-- /container -->
    </div><!-- /content -->
    <!-- End Content -->
    <input type="hidden" id="urlObtenerCategoriaId" value="{{ path('public_categoria_tener') }}">
    <input type="hidden" id="urlObtenerCategoria" value="{{ path('public_categoria_obtener') }}">
    <input type="hidden" id="urlStep1" value="{{ path('public_anuncio_modificar',{'step':'1'}) }}">
    <input type="hidden" id="nav" name="nav" value="1">

    <input type="hidden" id="idProducto" value="{{ producto.id }}">
    <input type="hidden" id="cadenaId" value="{{ cadenaId }}">

    <input type="hidden" id="categoriaSeleccionada" value="{{ producto!=null?producto.categoriaid.id:"" }}">
{% endblock %}
