{% extends '::publicTemplate.html.twig' %}

{% block generalContent %}
    <!-- Begin Content -->
    <div class="content-40mg">
        <div class="container">
            <div class="row mb30">
                <div class="col-xs-12 white-bg-shadow" style="min-height: 300px;padding-top:20px;">
                    <div class="row">
                        <div class="col-xs-12">
                            <div class="content-box content-box-bordered {{ type is defined?type:'' }}" style="min-height: 260px;">
                                {% if icon is defined %}
                                    <span class="{{ icon }} bordered-icon-lg"></span>
                                {% endif %}
                                <h3 class="pt15">{{ titulo }}</h3>
                                <p class="no-margin">{{ texto is defined?texto:'' }}</p>
                                {% if button is defined %}
                                    <a class="btn btn-primary btn-lg mt30" href="{{ button }}">Seguir comprando</a>
                                {% endif %}
                            </div>
                        </div>
                    </div>
                </div>
            </div>

        </div><!-- /container -->
    </div><!-- /content -->
    <!-- End Content -->

{% endblock %}

